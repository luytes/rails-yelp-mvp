<div class="wrapper-grey">
  <div class="container text-center">
    <div class="row">
    <h1>Restaurants</h1>
    <% @restaurants.each do |rest| %>
      <div class="col-xs-12 col-sm-4 col-l-3">
        <div class="card">
          <div class="card-description">
            <h3><%= rest.name %></h3>
            <p><%= rest.address %></p>
            <p><%= rest.phone_number %></p>
            <p><%= rest.category %></p>
          </div>
          <div class="card-link form-inline">
            <p><%= link_to 'Show Details', restaurant_path(rest) %></p>
            <p><%= link_to 'Edit', edit_restaurant_path(rest) %></p>
            <p><%= link_to 'Delete Restaurant', restaurant_path(rest), method: :delete, data: { confirm: "Are you sure?" } %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="create-rest text-center">
  <%= link_to 'Create a new Restaurant', new_restaurant_path %>
</div>
