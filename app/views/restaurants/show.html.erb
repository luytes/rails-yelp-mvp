<div class="container text-center">
  <h1>Your selected Restaurant</h1>
  <h2><%= @restaurant.name %></h2>

  <p>
  <strong>Adress:</strong>
  <%= @restaurant.address %>
  </p>

  <p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
  </p>

  <p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
  </p>

  <div class="reviews">
    <h3>Reviews: </h3>
    <% @restaurant.reviews.each do |rev| %>
    <p>"<%= rev.content %>"</p>
    <p>Rated: <%= rev.rating %>/5</p>
    <% end %>
  </div>

<%= render template: 'reviews/_form.html.erb' %>
<!-- what is this??? why is there a render template, where does it come from? -->

  <%= link_to "Back", restaurants_path %>
  <%= link_to "Edit", edit_restaurant_path %>
  <%= link_to "Add Review", new_restaurant_review_path(@restaurant) %>
  <!-- cause its a dynamic path we need that @restaurant -->

</div>
